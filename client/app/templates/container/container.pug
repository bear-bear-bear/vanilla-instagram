doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block page-title
body.service
  header.service-header
    nav.service-nav
      ul
        li
          a(href="#").service-nav__logo
            include /assets/images/insta-logo-text.svg
        li
          input(
            autocapitalize='none'
            placeholder='검색'
            type='text'
            value
          ).service-nav__search
        li
          a.service-nav__btn.service-nav__btn--login(href='#') 로그인
          a.service-nav__btn.service-nav__btn--join(href='#') 가입하기
  main.service-container
    block content

  include /templates/footer/footer
